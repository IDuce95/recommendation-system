# ML Recommendation System Environment Configuration

# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=ml_system
POSTGRES_USER=ml_user
POSTGRES_PASSWORD=ml_password
DATABASE_URL=postgresql://ml_user:ml_password@localhost:5432/ml_system

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPIC_RECOMMENDATIONS=recommendations
KAFKA_TOPIC_INTERACTIONS=user_interactions
KAFKA_TOPIC_FEATURES=feature_updates

# ChromaDB Configuration
CHROMADB_HOST=localhost
CHROMADB_PORT=8001

# FastAPI Configuration
FASTAPI_HOST=0.0.0.0
FASTAPI_PORT=8000
FASTAPI_WORKERS=4

# Streamlit Configuration
STREAMLIT_HOST=0.0.0.0
STREAMLIT_PORT=8501

# ML Configuration
MODEL_PATH=/app/models
FEATURES_TTL_SECONDS=3600
MAX_RECOMMENDATIONS=50

# Logging
LOG_LEVEL=INFO
DEBUG_MODE=false

# Feature Store Configuration
FEATURE_STORE_REDIS_MAX_CONNECTIONS=100
FEATURE_STORE_ENABLE_VERSIONING=true

# A/B Testing Configuration
AB_TESTING_CONFIDENCE_LEVEL=0.95
AB_TESTING_MIN_SAMPLE_SIZE=100

# Airflow Configuration
AIRFLOW_HOME=/opt/airflow
AIRFLOW_DAGS_FOLDER=/opt/airflow/dags

# Monitoring
PROMETHEUS_ENABLED=true
GRAFANA_ENABLED=true

# CORS
CORS_ORIGINS=["*"]
